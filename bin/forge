#!/usr/bin/env php
<?php

use Sven\ForgeCLI\Commands\{
    Authorize, Credentials, Daemons, Databases, Deployment, DeployScript,
    Env, FirewallRules, Jobs, NginxConfig, Projects, QuickDeploy, Recipes,
    Servers, Services, SshKeys, Sites, Workers
};

if (file_exists(__DIR__.'/../../../autoload.php')) {
    require __DIR__.'/../../../autoload.php';
} else {
    require __DIR__.'/../vendor/autoload.php';
}

$app = new Symfony\Component\Console\Application('Forge CLI', '0.2.0');

$app->addCommands([
    new Authorize,
    new Credentials,
    new Servers\Make,
    new Servers\All,
    new Servers\Show,
    new Servers\Update,
    new Servers\Delete,
    new Servers\Reboot,
    new Sites\Make,
    new Sites\All,
    new Sites\Show,
    new Sites\Update,
    new Sites\Delete,
    new Sites\Deploy,
    new Services\Reboot,
    new Services\Stop,
    new Services\Install,
    new Services\Uninstall,
    new Daemons\All,
    new Daemons\Make,
    new Daemons\Delete,
    new Daemons\Show,
    new Daemons\Reboot,
    new QuickDeploy\Disable,
    new QuickDeploy\Enable,
    new Deployment\GetLog,
    new Deployment\ResetState,
    new DeployScript\Get,
    new DeployScript\Update,
    new FirewallRules\All,
    new FirewallRules\Make,
    new FirewallRules\Delete,
    new FirewallRules\Show,
    new Jobs\All,
    new Jobs\Make,
    new Jobs\Delete,
    new Jobs\Show,
    new Databases\All,
    new Databases\Make,
    new Databases\Delete,
    new Databases\Show,
    new Workers\All,
    new Workers\Make,
    new Workers\Delete,
    new Workers\Show,
    new Workers\Reboot,
    new Recipes\All,
    new Recipes\Make,
    new Recipes\Delete,
    new Recipes\Show,
    new Recipes\Run,
    new Recipes\Update,
    new NginxConfig\Get,
    new NginxConfig\Update,
    new Env\Get,
    new Env\Update,
    new SshKeys\All,
    new SshKeys\Make,
    new SshKeys\Delete,
    new SshKeys\Show,
    new Projects\DeleteGit,
    new Projects\DeleteWordpress,
    new Projects\InstallGit,
    new Projects\InstallWordpress,
]);

$app->run();
